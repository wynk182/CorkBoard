<%= form_with(model: board, local: true) do |form| %>
  <% if board.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(board.errors.count, "error") %> prohibited this board from being saved:</h2>

      <ul>
      <% board.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :board_name, class: '_full-width' %>
  </div>

  <div class="field">
    <label>address or name and city</label>
    <%= form.text_field :address, id: :board_address, class: '_full-width' %>
  </div>


  <div class="actions">
    <%= form.submit class: '_full-width _primary' %>
  </div>
<% end %>
